{
  "compilerOptions": {
    "target": "es2015",
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "removeComments": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strict": true,
    "type": "module",
  },
  "include": [
    "src"
  ]
}
